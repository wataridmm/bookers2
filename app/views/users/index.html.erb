<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<%= render 'userinfo' %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @users.each do |user| %>
      <tr>

        <td><%= attachment_image_tag @user, :attachment_image_tag, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "show", "/users/#{user.id}" %> </td>
      </tr>
      <% end %>

  </tbody>
</table>

    </div>
  </div>
</div>